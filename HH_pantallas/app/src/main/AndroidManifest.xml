            android:name=".Screen.ScrennNoLogin.Login"
            android:exported="true" />
        <activity
            android:name=".Screen.ScrennNoLogin.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

