<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:guidelineUseRtl="false"
    tools:context=".Screen.Mi_Perfil">

    <TextView
        android:id="@+id/Mi_pefil_texto_email"
        android:layout_width="231dp"
        android:layout_height="43dp"
        android:layout_marginTop="43dp"
        android:layout_marginBottom="18dp"
        android:hint="email"
        app:layout_constraintBottom_toTopOf="@+id/Mi_pefil_texto_nombre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Mi_pefil_mi_foto" />


    <TextView
        android:id="@+id/Mi_pefil_texto_nombre"
        android:layout_width="231dp"
        android:layout_height="43dp"
        android:layout_marginTop="12dp"
        android:hint="nombre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Mi_pefil_texto_email" />

    <TextView
        android:id="@+id/Mi_pefil_texto_apellido"
        android:layout_width="231dp"
        android:layout_height="43dp"
        android:layout_marginTop="12dp"
        android:hint="apellidos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Mi_pefil_texto_nombre" />


    <TextView
        android:id="@+id/Mi_pefil_texto_fecha"
        android:layout_width="225dp"
        android:layout_height="27dp"
        android:layout_marginTop="76dp"
        android:hint="fecha"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Mi_pefil_texto_apellido" />

    <TextView
        android:id="@+id/Mi_pefil_texto_ciudad"
        android:layout_width="231dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        android:hint="ciudad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Mi_pefil_texto_apellido" />

    <TextView
        android:id="@+id/Mi_pefil_texto_Infopersonal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Informacion Personal "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!--
        <DatePicker
            android:id="@+id/tv_fecha_mi_info"
            android:layout_width="218dp"
            android:layout_height="22dp"
            android:layout_marginTop="20dp"
            android:hint="fecha"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_apellidos_mi_info" />
        -->


    <ImageView
        android:id="@+id/Mi_pefil_mi_foto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Mi_pefil_texto_Infopersonal"
        tools:srcCompat="@tools:sample/avatars" />
    <!-- android:onClick="openImagePicker" -->


    <ImageButton
        android:id="@+id/modificar_mi_pefil_BTN_back"
        android:layout_width="68dp"
        android:layout_height="76dp"
        android:layout_marginStart="16dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_menu_hambur_32px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024" />

    <Button
        android:id="@+id/Mi_pefil_BTN_modificarInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Modificar Informacion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Mi_pefil_texto_fecha" />

</androidx.constraintlayout.widget.ConstraintLayout>